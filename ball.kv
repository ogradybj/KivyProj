<GameMenu>:
    Image:
        id: background
        source: "images/backgrnd1.png"
        allow_stretch: True
        keep_ratio: False

    Button:
        id: new_game
        text: "START GAME"
        font_size: 34
        pos_hint: {'x':.4,'y':.4}
        size_hint: (.2, .2)
        on_release: print("game")



<TangentGame>:
    ball: guy_ball

    
    canvas:
        Rectangle:
            pos: 0, 0
            size: self.width, self.height
    Label:
        font_size: 70
        center_x: root.width / 4 - 150
        top: root.top - 50
        text: "SCORE:"
        color: .5, .5, .5, .5
    Label:
        font_size: 70  
        center_x: root.width / 4 + 50
        top: root.top - 50
        text: str(root.ball.score)
        color: .5, .5, .5, .5
    
    GuyBall:
        id: guy_ball
        center: self.parent.center
        









